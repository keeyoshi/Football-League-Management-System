@model IEnumerable<FootballLeague.player>

@{
    ViewBag.Title = "Index";
}

<h1>Players</h1>

<p>
    @Html.ActionLink("Add New Player", "Create")<p>

    @Html.ActionLink("View Player Record", "Index","player_record")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.player_fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dob)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nationality)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.team.team_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.player_fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dob)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nationality)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.team.team_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.player_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.player_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.player_id })
        </td>
    </tr>
}

</table>
