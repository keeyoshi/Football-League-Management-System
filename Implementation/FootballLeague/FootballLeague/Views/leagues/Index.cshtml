@model IEnumerable<FootballLeague.league>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-family:'Segoe UI Light'; font-weight:bolder;">League</h2><hr />

<p style="font-family:'Segoe UI Light';">
    @Html.ActionLink("Add New League", "Create")<p style="font-family:'Segoe UI Light';"> @Html.ActionLink("View League Team", "Index", "League_Team")
</p>
<table class="table" style="font-family:'Segoe UI Light';">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.league_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.league_type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.league_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.league_type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.league_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.league_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.league_id })
        </td>
    </tr>
}

</table>
